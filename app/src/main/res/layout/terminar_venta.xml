<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_margin="20dp"
        android:background="@color/button_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:fontFamily="sans-serif-condensed"
                android:text="Terminar Venta"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="ID"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Nombre"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Precio"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Cantidad"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Total"
                        android:padding="8dp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="1"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Coca-Cola"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$10"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="2"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$20"
                        android:padding="8dp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="2"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Arroz"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$15"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="1"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$15"
                        android:padding="8dp"
                        android:gravity="center"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="3"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="Aceite"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$20"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="3"
                        android:padding="8dp"
                        android:gravity="center"/>
                    <TextView
                        android:text="$60"
                        android:padding="8dp"
                        android:gravity="center"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingLeft="30dp"
                android:text="Total:"> </TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:text="$95.00"
                android:textSize="15dp"> </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/exit"
                android:text="Cancelar"> </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:backgroundTint="@color/ok"
                android:text="Siguiente"> </Button>


        </LinearLayout>

    </LinearLayout>





</LinearLayout>